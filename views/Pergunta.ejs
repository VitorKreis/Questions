<%- include('partials/header.ejs') %>
<body>

    <%- include('partials/nave-bar.ejs') %>
    
    <div class="container">
        <h1 style="text-align: center; margin-top: 120px;"><%= pergunta.titulo %></h1>
        <p style="text-align: center;"><%= pergunta.descricao %></p>


        <form method="post" action="/resposta">
            <h3>Responder</h3>
            <label>Resposta:</label>
            <textarea placeholder="Resposta" class="form-control" name="corpo"></textarea><br>
            <input type="hidden" name="IDpergunta" value="<%= pergunta.id %>">
            <button type="submit" class="btn btn-success btn">Responder</button>
        </form>
            <hr>
            <h3>Respostas</h3>
            <hr><br>

            <% respostas.forEach(resposta => { %>
                <br>
                <div class="card">
                    <div class="card-body">
                        <p><%= resposta.respota %></p>
                    </div>
                </div>
            
            <% }) %>

    </div>
        

    </div>

    </div>
</body>

<%- include('partials/footer.ejs') %>